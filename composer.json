{
    "name": "iamfarhad/validation",
    "description": "Laravel persian validation package with comprehensive validation rules for Iranian-specific data",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "laravel",
        "validation",
        "validator",
        "persian",
        "farsi",
        "iran",
        "lumen",
        "custom",
        "rule",
        "national-code",
        "mobile",
        "sheba",
        "postal-code",
        "card-number"
    ],
    "homepage": "https://github.com/iamfarhad/validation",
    "support": {
        "issues": "https://github.com/iamfarhad/validation/issues",
        "source": "https://github.com/iamfarhad/validation",
        "docs": "https://github.com/iamfarhad/validation#readme"
    },
    "authors": [
        {
            "name": "Farhad Zand",
            "email": "farhad.pd@gmail.com",
            "role": "Developer"
        }
    ],
    "autoload": {
        "psr-4": {
            "Iamfarhad\\Validation\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Iamfarhad\\Validation\\Tests\\": "tests/"
        }
    },
    "require": {
        "php": "^8.1",
        "illuminate/support": "^10.0|^11.0|^12.0",
        "illuminate/validation": "^10.0|^11.0|^12.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0|^11.0|^12.0",
        "orchestra/testbench": "^8.0|^9.0|^10.0",
        "mockery/mockery": "^1.0|^2.0",
        "phpstan/phpstan": "^1.10",
        "laravel/pint": "^1.0"
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage",
        "analyse": "vendor/bin/phpstan analyse",
        "format": "vendor/bin/pint",
        "ci": [
            "@format",
            "@analyse",
            "@test"
        ]
    },
    "extra": {
        "laravel": {
            "providers": [
                "Iamfarhad\\Validation\\ValidationRulesServiceProvider"
            ]
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}