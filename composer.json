{
    "name": "iamfarhad/validation",
    "description": "laravel persian validation package",
    "license": "MIT",
    "keywords": [
        "laravel",
        "validation",
        "validator",
        "persian",
        "farsi",
        "iran",
        "lumen",
        "custom",
        "rule",
        "lumen"
    ],
    "authors": [
        {
            "name": "Farhad Zand",
            "email": "farhad.pd@gmail.com"
        }
    ],
    "require": {
        "php": "^8.2",
        "illuminate/support": "^10.0|^11.0|^12.0"
    },
    "autoload": {
        "psr-4": {
            "Iamfarhad\\Validation\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Iamfarhad\\Validation\\Tests\\": "tests/"
        }
    },
    "require-dev": {
        "laravel/pint": "^1.6",
        "rector/rector": "^0.19.2",
        "orchestra/testbench": "^6.23|^7.0|^8.0|^9.0",
        "phpunit/phpunit": "^9.4|^10.1|^11.0"
    },
    "extra": {
        "laravel": {
            "providers": [
                "Iamfarhad\\Validation\\ValidationRulesServiceProvider"
            ]
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
